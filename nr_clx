#include <iostream>
using namespace std;

class Complex
{
    int re, im;
  public:
    Complex ()
    {
        re=0;
        im=0;
    }
    Complex (int a, int b) {
    this->re = a;
    this->im = b;
    }
    Complex suma(Complex z1,Complex z2)
    {
        Complex s;
        s.re=z1.re+z2.re;
        s.im=z1.im+z2.im;
        return s;
    }
    Complex produs(Complex z1,Complex z2)
    {
        Complex s;
        s.re=z1.re*z2.re-z1.im*z2.im;
        s.im=z1.re*z2.im+z1.im*z2.re;
        return s;
    }
    Complex putere(Complex z1,int a)
    {
        Complex pu;
        pu=z1;
        if(a==1)
        {
            return pu;
        }
        else
        {
            for(int i=1;i<a;i++)
            {
                pu=this->produs(pu,z1);
            }
        }
        return pu;

    }

    void afisare(Complex a)
    {
        cout<<a.re<<"+"<<a.im<<"i"<<endl;
    }

};
int main ()
{
    int x;
  Complex a (2,3);
  Complex b (5,6);
  Complex s,p,pu,e;
  s=s.suma(a,b);
  cout<<"Suma este:";
  s.afisare(s);
  p=p.produs(a,b);
  cout<<"Produsul este:";
  p.afisare(p);
  cout<<"Puterea la care ridicati=";
  cin>>x;
  pu=pu.putere(a,x);
  cout<<"Puterea:";
  pu.afisare(pu);

  return 0;
}
